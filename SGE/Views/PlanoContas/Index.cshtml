@model IEnumerable<SGE.Models.PlanoContas>

@{
    ViewData["Title"] = "Planos de Contas";
}

<h2>Planos de Contas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoMovimentacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMovimentacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Ver</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
