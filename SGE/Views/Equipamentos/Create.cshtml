@model SGE.Models.Equipamento

@{
    ViewData["Title"] = "Novo Equipamento";
}

<h2>Novo Equipamento</h2>

<hr />
<ul id="tabstrip" class="nav nav-tabs" role="tablist">
    <li class="active">
        <a href="#dadosTab" role="tab" data-toggle="tab">Dados do Equipamento</a>
    </li>
    <li>
        <a href="#detalhesTab" role="tab" data-toggle="tab">Detalhes</a>
    </li>
</ul>
<form asp-action="Create">
    <div class="row">  
        <div class="tab-content">
            <div id="dadosTab" class="tab-pane fade in active">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <textarea asp-for="Descricao" class="form-control" text-wrap="normal" type="text" rows="5"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="InstrumentoId" class="control-label"></label>
                        @Html.DropDownListFor(model => model.InstrumentoId, new SelectList(@ViewBag.Instrumentos, "Id", "Nome"), "Selecione um item", new { @class = "form-control form-paytrack-input" })

                        @*@Html.DropDownList("InstrumentoId",
             (IEnumerable<SelectListItem>)@ViewBag.Instrumentos,
            "Selecione o Instrumento",
            new { @class = "form-control" })*@
                        <span asp-validation-for="InstrumentoId" class="text-danger"></span>
                    </div>
                  
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Codigo" class="control-label"></label>
                        <input asp-for="Codigo" class="form-control" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Imagem" class="control-label"></label>
                        <input asp-for="Imagem" class="form-control" />
                        <span asp-validation-for="Imagem" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CaseId" class="control-label"></label>
                        @Html.DropDownListFor(model => model.CaseId, new SelectList(@ViewBag.Cases, "Id", "Nome"), "Selecione um item", new { @class = "form-control form-paytrack-input" })

                        @*@Html.DropDownList("InstrumentoId",
             (IEnumerable<SelectListItem>)@ViewBag.Instrumentos,
            "Selecione o Instrumento",
            new { @class = "form-control" })*@
                        <span asp-validation-for="CaseId" class="text-danger"></span>
                    </div>
                </div>
       

            </div>
            <div id="detalhesTab" class="tab-pane fade">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NumeroSerie" class="control-label"></label>
                        <input asp-for="NumeroSerie" class="form-control" />
                        <span asp-validation-for="NumeroSerie" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ValorSistema" class="control-label"></label>
                        <input asp-for="ValorSistema" class="form-control" />
                        <span asp-validation-for="ValorSistema" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ValorLocacao" class="control-label"></label>
                        <input asp-for="ValorLocacao" class="form-control" />
                        <span asp-validation-for="ValorLocacao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FornecedorId" class="control-label"></label>
                        @Html.DropDownListFor(model => model.FornecedorId, new SelectList(@ViewBag.Fornecedores, "Id", "Nome"), "Selecione um item", new { @class = "form-control form-paytrack-input" })
                        @*@Html.DropDownList("InstrumentoId",
             (IEnumerable<SelectListItem>)@ViewBag.Instrumentos,
            "Selecione o Instrumento",
            new { @class = "form-control" })*@
                        <span asp-validation-for="FornecedorId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>                   
                    <div class="form-group">
                        <label asp-for="QuantidadeEstoque" class="control-label"></label>
                        <input asp-for="QuantidadeEstoque" class="form-control" />
                        <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                    </div>                   
                    <div class="form-group">
                        <label asp-for="DataAquisição" class="control-label"></label>
                        <input asp-for="DataAquisição" class="form-control" />
                        <span asp-validation-for="DataAquisição" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DataBaixa" class="control-label"></label>
                        <input asp-for="DataBaixa" class="form-control" />
                        <span asp-validation-for="DataBaixa" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </div>
</form>
<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>

