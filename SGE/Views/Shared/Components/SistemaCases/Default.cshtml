@model IEnumerable<SistemaCases>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Case.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Case.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Case.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Case.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Case.Status)
                </td>
                <td>
                    <a asp-action="DeleteSistemaCase" asp-route-id="@item.Id" class="btn btn-primary">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
