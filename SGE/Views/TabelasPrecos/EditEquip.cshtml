@model SGE.Models.TabelaPreco
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-danger">Editar Preço </h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tabela" class="control-label"></label>
                <input asp-for="Tabela" class="form-control" />
                <span asp-validation-for="Tabela" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="EquipamentoId" class="control-label"></label>
                <select asp-for="EquipamentoId" class="form-control" asp-items="ViewBag.EquipamentoId"></select>
                <span asp-validation-for="EquipamentoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorCompra" class="control-label"></label>
                <input asp-for="ValorCompra" class="form-control" pattern="[0-9]+([,\.][0-9]+)?" step="any" autocomplete="off" />
                <span asp-validation-for="ValorCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorLocacao" class="control-label"></label>
                <input asp-for="ValorLocacao" class="form-control" pattern="[0-9]+([,\.][0-9]+)?" step="any" autocomplete="off" />
                <span asp-validation-for="ValorLocacao" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>


