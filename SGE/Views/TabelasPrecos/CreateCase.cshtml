@model SGE.Models.TabelaPreco

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-danger">Editar Preço </h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tabela" class="control-label"></label>
                <input asp-for="Tabela" class="form-control" />
                <span asp-validation-for="Tabela" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="CaseId" class="control-label"></label>
                <select asp-for="CaseId" class="form-control" asp-items="ViewBag.CaseId"></select>
            </div>           
            <div class="form-group">
                <label asp-for="ValorCompra" class="control-label"></label>
                <input asp-for="ValorCompra" class="form-control" />
                <span asp-validation-for="ValorCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorLocacao" class="control-label"></label>
                <input asp-for="ValorLocacao" class="form-control" />
                <span asp-validation-for="ValorLocacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

