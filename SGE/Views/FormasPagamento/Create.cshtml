@model SGE.Models.FormaPagamento

@{
    ViewData["Title"] = "Forma de Pagamento";
}

<h2>Novo Registro</h2>

<h4>Forma de Pagamento</h4>
<hr />

<div class="tab-content">
    <div class="tab-pane fade in active" id="_FirstTab">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MeioPagamento" class="control-label"></label>
                        @Html.DropDownList("MeioPagamento",
                            new SelectList(Enum.GetNames(typeof(MeioPagamento))),
                            "Selecione o Meio de Pagamento",
                            new { @class = "form-control" })
                        <span asp-validation-for="MeioPagamento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="QuantidadeParcelas" class="control-label"></label>
                        <input asp-for="QuantidadeParcelas" class="form-control" />
                        <span asp-validation-for="QuantidadeParcelas" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        @Html.DropDownList("Status",
                              new SelectList(Enum.GetValues(typeof(Status))),
                              "Selecione o Status",
                              new { @class = "form-control" })
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

    </div>
    <div class="tab-pane fade" id="_SecondTab">

    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>

