@model SGE.Models.FormaPagamento

@{
    ViewData["Title"] = "Editar";
}
    <h2 class="text-danger">Editar Forma de Pagamento (@ViewBag.Nome)</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeioPagamento" class="control-label"></label>
                @Html.DropDownList("MeioPagamento",
                   new SelectList(Enum.GetValues(typeof(MeioPagamento))),
                   "Selecione o Meio de Pagamento",
                   new { @class = "form-control" })
                <span asp-validation-for="MeioPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeParcelas" class="control-label"></label>
                <input asp-for="QuantidadeParcelas" class="form-control" />
                <span asp-validation-for="QuantidadeParcelas" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @Html.DropDownList("Status",
                     new SelectList(Enum.GetValues(typeof(Status))),
                     "Selecione o Status",
                     new { @class = "form-control" })
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>

