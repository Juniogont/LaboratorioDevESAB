@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
              
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
               
            </div>
        </div>
     </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Próxima</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Orçamentos</h2>
        <ul>
            <li><a asp-controller="Orcamentos" asp-action="Index">Listar Orçamentos</a></li>
            <li><a asp-controller="Orcamentos" asp-action="Create">Adicionar um Orçamento</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Eventos</h2>
        <ul>
            <li><a asp-controller="Eventos" asp-action="Index">Listar Eventos</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Equipamentos</h2>
        <ul>
            <li><a asp-controller="Equipamentos" asp-action="Index">Listar Equipamentos</a></li>
            <li><a asp-controller="Equipamentos" asp-action="Create">Adicionar um Equipamento</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Cases</h2>
        <ul>
            <li><a asp-controller="Cases" asp-action="Index">Listar Cases</a></li>
            <li><a asp-controller="Cases" asp-action="Create">Adicionar um Case</a></li>
        </ul>
    </div>

</div>
