@model SGE.Models.ViewModels.ViewModelOrcamento
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Mvc.Core.Common;
@{
    ViewData["Title"] = "Orçamentos";
}

<h2>Orçamentos</h2>

<form asp-action="Buscar" method="POST">
    <div class="row">
        <div class="tab-content" style="margin-top: 40px; background-color:aliceblue">
            <div class="col-md-3">
                <p>
                    <a asp-action="Create" class="btn btn-primary">Novo Orçamento</a>
                </p>
            </div>
            <div class="col-md-3">
                <input asp-for="buscaNome" class="form-control" />
            </div>
            <div class="col-md-6">
                <input type="submit" value="Buscar" class="btn btn-primary text-left" />
            </div>
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orcamento.NumeroProposta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orcamento.NomeEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orcamento.dataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orcamento.NomeSolicitante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orcamento.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orcamento.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orcamento.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orcamento.ValorTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orcamentos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroProposta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeEvento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dataInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeSolicitante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.Sigla)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Imprimir</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    @Html.PagedListPager((IPagedList)Model.Orcamentos, pagina => Url.Action("Index", new { pagina }),
new PagedListRenderOptions
{
LiElementClasses = new string[] { "page-item" },
PageClasses = new string[] { "page-link" }
})
</div>
