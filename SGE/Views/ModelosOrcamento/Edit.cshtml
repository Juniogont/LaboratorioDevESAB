@model SGE.Models.ModeloOrcamento

@{
    ViewData["Title"] = "Editar";
}

    <h2 class="text-danger">Editar Modelo de Orçamento (@ViewBag.Nome)</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UploadImagem" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="file" name="arquivos" />
            <br />
            <button class="btn btn-primary">Enviar Logo</button>
            <input type="submit" value="Enviar Logo" asp-route-id="@Model.Id" class="btn btn-default" />
        </form>
    </div>
    <div class="col-md-4">
        <img src="@ViewBag.Logomarca" />
    </div>
</div>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CNPJ" class="control-label"></label>
                <input asp-for="CNPJ" class="form-control" />
                <span asp-validation-for="CNPJ" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="RazaoEmpresa" class="control-label"></label>
                <input asp-for="RazaoEmpresa" class="form-control" />
                <span asp-validation-for="RazaoEmpresa" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextoInicial" class="control-label"></label>
                <textarea asp-for="TextoInicial" class="form-control" text-wrap="normal" type="text" rows="5"></textarea>
                <span asp-validation-for="TextoInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextoFinal" class="control-label"></label>
                <textarea asp-for="TextoFinal" class="form-control" text-wrap="normal" type="text" rows="5"></textarea>
                <span asp-validation-for="TextoFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assinatura" class="control-label"></label>
                <textarea asp-for="Assinatura" class="form-control" text-wrap="normal" type="text" rows="5"></textarea>
                <span asp-validation-for="Assinatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rodapé" class="control-label"></label>
                <textarea asp-for="Rodapé" class="form-control" text-wrap="normal" type="text" rows="5"></textarea>
                <span asp-validation-for="Rodapé" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LogomarcaPath" />
            <input type="hidden" asp-for="ContentType" />
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @Html.DropDownList("Status",
                                 new SelectList(Enum.GetValues(typeof(Status))),
                                 "Selecione o Status",
                                 new { @class = "form-control" })
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>

        </div>
    </div>
</form>
<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>

