@model IEnumerable<SGE.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionários";
}

<h2>Funcionários</h2>

<p>

    <a asp-action="Create" class="btn btn-primary">Novo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tratamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>                          
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>     
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tratamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Ver</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
